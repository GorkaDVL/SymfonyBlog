{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<br><br><br>
<section class="article">

{% for article in articles %}
<article>
    <h2>{{ article.title }}</h2>
    <div class="metadata">Ecrit le {{article.createdAt | date('d/M/Y') }} Ã  {{article.createdAt | date('H/i') }} </div>
    <div class="content">
        <img src="{{ article.image }}" alt="" >
        {{article.content | raw}}
        <br><br><br>
        
        <a href="{{ path('blog_show', {'id':article.id} ) }}" class="btn-primary">lire la suite</a>
    </div>
</article>
<br><br><br>
{% endfor %}


</section>
{% endblock %}
